<UserControl x:Class="Songify_Core.UserControls.UcPlaylistItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Songify_Core.UserControls"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="ImgBorder" Width="16" Height="16" CornerRadius="2" Grid.Row="0" Grid.Column="0">
            <Image x:Name="PlaylistImage" Height="14" Width="14" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <TextBlock Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Margin="6,0" x:Name="TbPlaylistName"  Text="PlayListName" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
