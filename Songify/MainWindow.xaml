<Controls:MetroWindow x:Name="Sognify_MainWindow" x:Class="Songify.MainWindow"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Songify"
        mc:Ignorable="d"
        Title="Songify" Height="360" Width="645" Loaded="Sognify_MainWindow_Loaded" MinWidth="645" MinHeight="356" ResizeMode="CanMinimize">

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button x:Name="btn_About" Click="btn_About_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="15" Height="15"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_book_open_information}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text="about" />
                </StackPanel>
            </Button>

            <Button x:Name="btn_Settings" Click="btn_Settings_Click">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Width="15" Height="15"
                   Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_settings}" />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                    <TextBlock Margin="4 0 0 0"
                   VerticalAlignment="Center"
                   Text="settings" />
                </StackPanel>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Grid>
        <Label x:FieldModifier="public" x:Name="Lbl_Artist" Content="Artist" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" FontSize="16" />
        <Label x:FieldModifier="public" x:Name="Lbl_Song" Content="Title" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top" FontSize="16" />
        <Label x:FieldModifier="public" x:Name="Lbl_Album" Content="Album" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" FontSize="16" />
        <Label Content="Artist" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,29,0,0" />
        <Label Content="Title" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,74,0,0" />
        <Label Content="Album" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,119,0,0" />
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="552,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" />

        <Controls:FlyoutsControl>
            <Controls:Flyout x:Name="flyout_Settings" Header="Settings" Position="Left" IsOpen="false" Theme="Adapt" Controls:ControlsHelper.HeaderMargin="0" Width="639">
                <Grid Margin="10">
                    <TabControl Margin="0,10,10,10" Width="582">
                        <TabItem Header="Output">
                            <Grid>
                                <Label Content="Output Directory" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />
                                <TextBox x:Name="Txtbx_outputdirectory" HorizontalAlignment="Left" Height="23" Margin="114,11,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="425" IsReadOnly="True" Controls:TextBoxHelper.Watermark="Output Directory" />
                                <Button x:Name="Btn_Outputdirectory" Content="..." HorizontalAlignment="Left" Margin="544,10,0,0" VerticalAlignment="Top" Width="32" Click="Btn_Outputdirectory_Click" />
                                <Label Content="Custom Output" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" />
                                <TextBox x:Name="txtbx_customoutput" HorizontalAlignment="Left" Height="19" Margin="114,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="425" TextChanged="txtbx_customoutput_TextChanged" Controls:TextBoxHelper.Watermark="Custom Output Format" ToolTip="Use paramters {artist}, {title} and {album}">
                                    <TextBox.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem x:Name="MenuItem_InsertArtist" Header="Insert Artist" Click="MenuItem_InsertArtist_Click" />
                                            <MenuItem x:Name="MenuItem_InsertTitle" Header="Insert Title" Click="MenuItem_InsertTitle_Click" />
                                            <MenuItem x:Name="MenuItem_InsertAlbum" Header="Insert Album" Click="MenuItem_InsertAlbum_Click" />
                                        </ContextMenu>
                                    </TextBox.ContextMenu>
                                </TextBox>
                                <Label x:Name="lbl_livepreview" Content="" HorizontalAlignment="Left" Margin="114,73,0,0" VerticalAlignment="Top" Height="26" Width="425" />
                                <Button x:Name="btn_save" Content="Save" HorizontalAlignment="Left" Margin="501,134,0,0" VerticalAlignment="Top" Width="75" Click="btn_save_Click" />
                            </Grid>
                        </TabItem>
                        <TabItem Header="Appearance">
                            <Grid>
                                <ComboBox x:Name="ComboBox_Color" Margin="192,11,10,0" ItemsSource="{Binding Colors}" SelectionChanged="ComboBox_SelectionChanged" Height="32" VerticalAlignment="Top" />
                                <Label x:Name="Label_Color" Content="Color:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="177" Height="39" />
                                <Controls:ToggleSwitch x:Name="themeToggleSwitch" Header="Dark Mode" Margin="10,54,0,35" IsCheckedChanged="themeToggleSwitch_IsCheckedChanged" Height="80" HorizontalAlignment="Left" Width="177" FontFamily="Segoe UI" HeaderFontFamily="Segoe UI" FontSize="12" Controls:ControlsHelper.HeaderFontSize="12" ContentPadding="0,0,-1,0" Controls:ControlsHelper.HeaderMargin="0" />
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </Controls:Flyout>
        </Controls:FlyoutsControl>
        <Controls:FlyoutsControl>
            <Controls:Flyout x:Name="flyout_About" Header="About" Position="Left" IsOpen="false" Theme="Adapt" Controls:ControlsHelper.HeaderMargin="0" Width="639">
