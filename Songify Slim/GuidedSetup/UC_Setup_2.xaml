<UserControl x:Class="Songify_Slim.GuidedSetup.UC_Setup_2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Songify_Slim.GuidedSetup"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded" Height="383">
    <Grid>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Would you like to take a guided setup?" VerticalAlignment="Top" FontSize="36" Margin="0,55,0,0"/>
        <RadioButton x:Name="rbtn_No" Content="No, I know what I'm doing" HorizontalAlignment="Left" Margin="258,256,0,0" VerticalAlignment="Top" Width="175" Height="75" GroupName="rbtn" Checked="rbtn_No_Checked"/>
        <RadioButton x:Name="rbtn_Yes" Content="Yes, Please" HorizontalAlignment="Left" Margin="258,181,0,0" VerticalAlignment="Top" Width="175" Height="75" GroupName="rbtn" Checked="rbtn_Yes_Checked" />
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="You can change everything later on in settings" VerticalAlignment="Top" FontSize="18" Margin="90,103,89,0"/>
    </Grid>
</UserControl>
